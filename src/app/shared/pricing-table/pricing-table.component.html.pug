                    .col-8
                      .fancy-field-group
                        input.d-none.fancy-field-control#pay-monthly(name='[]', type='radio', checked='')
                        label(for='pay-monthly') Pay Monthly
                    .col-4.text-right
                      .pay-price
                        strong $8
                        span.text-muted /mo
                li
