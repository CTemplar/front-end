  .package-card-holder.mt-3.mt-sm-0.mt-md-5
    ul.package-xs-tab.list-style-none.hidden-sm-up
      li.active([class.is-active]='1 === selectedIndex')
        a(role='button', (click)='toggleSlides(1);') Prime
      li([class.is-active]='2 === selectedIndex')
        a(role='button', (click)='toggleSlides(2);') Free
    .row.flex-nowrap.row-lg
      .col-sm-6.flex-sm-last.package-prime-col.active-slide([class.is-active-slide]='1 === selectedIndex')
        .package-card.package-card-prime.is-shadowed.bg-white.text-dark
          header.package-card-header.text-center
            h2.text-white.m-0
              strong Prime
          .package-card-body
            ul.package-list.mb-0.list-style-none.pl-0
              li.package-list-item.has-border
                i.fa.fa-check.text-green
                | 1 User
              li.package-list-item.is-sm.has-border.has-icon-center
                i.fa.fa-check.text-green
                .btn-dropdown.btn-dropdown-lg.btn-dropdown-select
                  .storage-select-dropdown(ngbdropdown='')
                    button.dropdown-toggle#storageDropdownMenuButton(type='button', ngbdropdowntoggle='') 5 Gb Storage
                    .dropdown-menu-right(ngbdropdownmenu='')
                      a.dropdown-item 10 Gb Storage + $4/MO
                      a.dropdown-item 15 Gb Storage + $8/MO
                      a.dropdown-item 20 Gb Storage + $12/MO
                      a.dropdown-item 25 Gb Storage + $16/MO
              li.package-list-item.has-border
                i.fa.fa-check.text-green
                | 1 E-mail Address
              li.package-list-item
                i.fa.fa-check.text-green
                | 100 Messages per Day
              li.package-list-item
                i.fa.fa-check.text-green
                | 200 Folders
              li.package-list-item
                i.fa.fa-check.text-green
                | Normal Support
              li.package-list-item
                i.fa.fa-check.text-green
                | Dead Mans Timer
              li.package-list-item
                i.fa.fa-check.text-green
                | Delayed Delivery Timer
              li.package-list-item
                i.fa.fa-check.text-green
                | Self Destruct Timer
              li.package-list-item
                i.fa.fa-check.text-green
                | Encryption for non-CTemplar Users
