.mailbox-actionbar
  .row
    .col-12.col-sm-8.mailbox-actionbar-col
      ul.mailbox-actionbar-menu
        li.btn-dropdown.mailbox-dropdown.checkbox-dropdown
          div(ngbdDropDown)
            button.dropdown-toggle#actionsDropdownMenuButton(ngbdDropDownToggle)
              span.fancy-field-group
                input.d-none.fancy-field-control.checked-type-minus#mailboxBulkActions(name='[]', type='checkbox')
                label.fancy-field-empty(for='mailboxBulkActions')
            div(ngbdDropDownMenu='ngbDropdownMenu', aria-labelledby='actionsDropdownMenuButton')
              a.dropdown-item(href='') All
              a.dropdown-item(href='') Read
              a.dropdown-item(href='') Unread
              a.dropdown-item(href='') Starred
              a.dropdown-item(href='') Unstarred
        li.px-0
          a.disabled.border-right-0.border-radius-right-0(href='')
            i.icon.icon-archive
        li.pr-0.pl-0.hidden-xs-down
          a.disabled.border-right-0.border-radius-0(href='')
            i.icon.icon-warning
        li.px-0
          a.disabled.border-radius-left-0(href='')
            i.icon.icon-garbage
        li.btn-dropdown.more-xs-options.pl-0.hidden-sm-up
          div(ngbdDropDown)
            button.border-left-0.border-radius-left-0#dropdownMoreOptions(ngbdDropDownToggle)
              i.icon.icon-more
            .mobiledOptionsDropdown(ngbdDropDownMenu='ngbDropdownMenu', aria-labelledby='dropdownMoreOptions')
              ul.more-xs-options-list
                li
                  a.disabled(href='')
                    i.icon.icon-warning
                li.btn-dropdown.mailbox-dropdown.folders-dropdown
                  div(ngbdDropDown)
                    button.disabledx#extraOptionsDropdownMenuButton(ngbdDropDownToggle)
                      i.icon.icon-folder
                    div(ngbdDropDownMenu='ngbDropdownMenu', aria-labelledby='extraOptionsDropdownMenuButton')
                      a.dropdown-item(href='')
                        span.folder-color-box.is-success
                        | Folder 1
                      a.dropdown-item(href='')
                        span.folder-color-box.is-info
                        | Another Folder 21
                      a.dropdown-item(href='')
                        span.folder-color-box.is-warning
                        | Folder 33
                      a.dropdown-item(href='')
                        i.icon.icon-inbox
                        | Inbox
                      a.dropdown-item(href='')
                        i.icon.icon-inbox
                        | Draft
                      a.dropdown-item(href='')
                        i.icon.icon-archive
                        | Archive
                      span.divider-item.d-block
                      a.dropdown-item(href='', data-toggle='modal', data-target='#createFoldersModal')
                        i.icon.icon-folder
                        | Create folder
        li.btn-dropdown.mailbox-dropdown.folders-dropdown.hidden-xs-down
          div(ngbdDropDown)
            button.disabledx#folderDropdownMenuButton(ngbdDropDownToggle)
              i.icon.icon-folder
            div(ngbdDropDownMenu='ngbDropdownMenu', aria-labelledby='folderDropdownMenuButton')
              a.dropdown-item(href='')
                span.folder-color-box.is-success
                | Folder 1
              a.dropdown-item(href='')
                span.folder-color-box.is-info
                | Another Folder 21
              a.dropdown-item(href='')
                span.folder-color-box.is-warning
                | Folder 33
              a.dropdown-item(href='')
                i.icon.icon-inbox
                | Inbox
              a.dropdown-item(href='')
                i.icon.icon-inbox
                | Draft
              a.dropdown-item(href='')
                i.icon.icon-archive
                | Archive
              span.divider-item.d-block
              a.dropdown-item(href='', data-toggle='modal', data-target='#createFoldersModal')
                i.icon.icon-folder
                | Create folder
        li.btn-dropdown.mailbox-dropdown.mailbox-dropdown-lg.more-options-dropdown.pl-0
          .dropdown(ngbdDropDown)
            button.disabledx#moreOptionsDropdownMenuButton(ngbdDropDownToggle) More
            div(ngbdDropDownMenu='ngbDropdownMenu', aria-labelledby='moreOptionsDropdownMenuButton')
              a.dropdown-item(href='') Add star
              a.dropdown-item(href='') Mark as read
              a.dropdown-item(href='') Mark as unread
    .col-sm-4.mailbox-actionbar-col.hidden-xs-down
      .mail-controls.d-flex.align-items-center.justify-content-end
        .mail-result-text.text-muted
          small 1-50 of 2346
        .mail-nav-control
          button.mail-nav-control-prev
            i.icon.icon-chevron-left
          button.mail-nav-control-next
            i.icon.icon-chevron-right
.mail-listing
  .mail-list-row.is-unread
    .mail-list-inner-row
      .mail-list-col
        .mail-list-col-row
          .mail-list-col-item.mail-checkbox
            .fancy-field-group
              input.d-none.fancy-field-control#mailItemCheckbox1(name='[]', type='checkbox')
              label.fancy-field-empty(for='mailItemCheckbox1')
          .mail-list-col-item.mail-status
            .mail-status-type
              i.icon.icon-star
          .mail-list-col-item.mail-from-name
            span John Simmons
      .mail-list-col.mail-list-col-lg
        .mail-desc
          p
            small
              strong Welcome to CTemplar!
              | You now have an inbox that is protected by strong encryption. Even we do not have the ability to read your emails.
      .mail-list-col.mail-list-col-xs
        .mail-list-col-xs-row
          .mail-list-col-xs-item.mail-file-size 2.6kB
          .mail-list-col-xs-item.mail-sent-date Jun 29
          .mail-list-col-xs-item.mail-security-status
            i.icon.icon-secured
  .mail-list-row.is-read([ngClass]="{'is-unread': !mail.read}", *ngfor='let mail of mails')
    .mail-list-inner-row
      .mail-list-col
        .mail-list-col-row
          .mail-list-col-item.mail-checkbox
            .fancy-field-group
              input.d-none.fancy-field-control#mailItemCheckbox1(name='[]', type='checkbox')
              label.fancy-field-empty(for='mailItemCheckbox1')
          .mail-list-col-item.mail-status
            .mail-status-type([ngClass]="{'is-fav': mail.starred}")
              i.icon.icon-star-filled
          .mail-list-col-item.mail-from-name
