.mailbox-actionbar
  .row
    .col-12.col-sm-8.mailbox-actionbar-col
      ul.mailbox-actionbar-menu
        li.btn-dropdown.mailbox-dropdown.checkbox-dropdown
          div(ngbDropdown)
            button.dropdown-toggle#actionsDropdownMenuButton(ngbDropdownToggle)
              span.fancy-field-group
                input.d-none.fancy-field-control.checked-type-minus#mailboxBulkActions(name='[]', type='checkbox')
                label.fancy-field-empty(for='mailboxBulkActions')
            div(ngbDropdownMenu, aria-labelledby='actionsDropdownMenuButton')
              a.dropdown-item(href='') All
              a.dropdown-item(href='') Read
              a.dropdown-item(href='') Unread
              a.dropdown-item(href='') Starred
              a.dropdown-item(href='') Unstarred
        li.px-0
          a.disabled.border-right-0.border-radius-right-0(href='')
            i.icon.icon-archive
        li.pr-0.pl-0.hidden-xs-down
          a.disabled.border-right-0.border-radius-0(href='')
            i.icon.icon-warning
        li.px-0
          a.disabled.border-radius-left-0(href='')
            i.icon.icon-garbage
        li.btn-dropdown.more-xs-options.pl-0.hidden-sm-up
          div(ngbDropdown)
            button.border-left-0.border-radius-left-0#dropdownMoreOptions(ngbDropdownToggle)
              i.icon.icon-more
            .mobiledOptionsDropdown(ngbDropdownMenu, aria-labelledby='dropdownMoreOptions')
              ul.more-xs-options-list
                li
                  a.disabled(href='')
                    i.icon.icon-warning
                li.btn-dropdown.mailbox-dropdown.folders-dropdown
                  div(ngbDropdown)
                    button.disabledx#extraOptionsDropdownMenuButton(ngbDropdownToggle)
                      i.icon.icon-folder
                    div(ngbDropdownMenu, aria-labelledby='extraOptionsDropdownMenuButton')
                      a.dropdown-item(href='')
                        span.folder-color-box.is-success
                        | Folder 1
                      a.dropdown-item(href='')
                        span.folder-color-box.is-info
                        | Another Folder 21
                      a.dropdown-item(href='')
                        span.folder-color-box.is-warning
                        | Folder 33
                      a.dropdown-item(href='')
                        i.icon.icon-inbox
                        | Inbox
                      a.dropdown-item(href='')
                        i.icon.icon-inbox
                        | Draft
                      a.dropdown-item(href='')
                        i.icon.icon-archive
                        | Archive
                      span.divider-item.d-block
                      a.dropdown-item(href='', data-toggle='modal', data-target='#createFoldersModal')
                        i.icon.icon-folder
                        | Create folder
        li.btn-dropdown.mailbox-dropdown.folders-dropdown.hidden-xs-down
          div(ngbDropdown)
            button.disabledx#folderDropdownMenuButton(ngbDropdownToggle)
              i.icon.icon-folder
            div(ngbDropdownMenu, aria-labelledby='folderDropdownMenuButton')
              a.dropdown-item(href='')
                span.folder-color-box.is-success
                | Folder 1
              a.dropdown-item(href='')
                span.folder-color-box.is-info
                | Another Folder 21
              a.dropdown-item(href='')
                span.folder-color-box.is-warning
                | Folder 33
              a.dropdown-item(href='')
                i.icon.icon-inbox
                | Inbox
              a.dropdown-item(href='')
                i.icon.icon-inbox
                | Draft
              a.dropdown-item(href='')
                i.icon.icon-archive
                | Archive
              span.divider-item.d-block
              a.dropdown-item(href='', data-toggle='modal', data-target='#createFoldersModal')
                i.icon.icon-folder
                | Create folder
        li.btn-dropdown.mailbox-dropdown.mailbox-dropdown-lg.more-options-dropdown.pl-0
          .dropdown(ngbDropdown)
            button.disabledx#moreOptionsDropdownMenuButton(ngbDropdownToggle) More
            div(ngbDropdownMenu, aria-labelledby='moreOptionsDropdownMenuButton')
              a.dropdown-item(href='') Add star
              a.dropdown-item(href='') Mark as read
              a.dropdown-item(href='') Mark as unread
    .col-sm-4.mailbox-actionbar-col.hidden-xs-down
      .mail-controls.d-flex.align-items-center.justify-content-end
        .mail-result-text.text-muted
          small 1-50 of 2346
        .mail-nav-control
          button.mail-nav-control-prev
            i.icon.icon-chevron-left
          button.mail-nav-control-next
            i.icon.icon-chevron-right

.mail-listing
  .mail-list-row([ngClass]="{'is-unread': !message.read, 'is-read': message.read}", *ngFor="let message of messages$ | async", routerLink="/mailbox/message/{{ message.id }}")
    .mail-list-inner-row
      .mail-list-col
        .mail-list-col-row
          .mail-list-col-item.mail-checkbox
            .fancy-field-group
              input.d-none.fancy-field-control#mailItemCheckbox1(name='[]', type='checkbox')
              label.fancy-field-empty(for='mailItemCheckbox1')
          .mail-list-col-item.mail-status
            .mail-status-type([ngClass]="{'is-fav': message.starred}")
              i.icon.icon-star-filled
          .mail-list-col-item.mail-from-name
            span {{ message.json.headers.From }}
      .mail-list-col.mail-list-col-lg
        .mail-desc
          .mail-delete-badge(*ngIf="selfdestruction")
            span.badge.badge-warning Delete in 5.25
          p
            small
              strong {{ message.json.headers.Subject }}
              | {{ message.json.body }}
      .mail-list-col.mail-list-col-xs
        .mail-list-col-xs-row
          .mail-list-col-xs-item.mail-file-size 2.6kB
          .mail-list-col-xs-item.mail-sent-date {{ message.datetime }}
          .mail-list-col-xs-item.mail-security-status([ngClass]="{'is-disabled': message.starred}")
            i.icon.icon-secured
.mailbox-footer-actionbar.hidden-sm-up
  .row.justify-content-end
    .col-12.mailbox-actionbar-col
      .mail-controls.d-flex.align-items-center.justify-content-end
        .mail-result-text.text-muted
          small 1-50 of 2346
        .mail-nav-control
          button.mail-nav-control-prev
            i.icon.icon-chevron-left
          button.mail-nav-control-next
            i.icon.icon-chevron-right
