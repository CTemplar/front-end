    i.icon.icon-add-user.text-white
.mailbox-actionbar.border-bottom-0
  .row
    .col-12.col-sm-8.mailbox-actionbar-col
      ul.mailbox-actionbar-menu
        li.btn-dropdown.mailbox-dropdown.checkbox-dropdown
          div(ngbDropdown)
            button.dropdown-toggle#langDropdownMenuButton(ngbDropdownToggle, role='button')
              span.fancy-field-group
                input.d-none.fancy-field-control.checked-type-minus#mailboxBulkActions(name='[]', type='checkbox')
                label.fancy-field-empty(for='mailboxBulkActions')
            div(ngbDropdownMenu, aria-labelledby='langDropdownMenuButton')
              a.dropdown-item(href='') All
              a.dropdown-item(href='') Read
              a.dropdown-item(href='') Unread
              a.dropdown-item(href='') Starred
              a.dropdown-item(href='') Unstarred
        li.px-0
          a.border-radius-r-0.border-right-0.no-icon(href='') Edit
        li.pr-0.pl-0
          a.border-radius-l-0(href='')
            i.icon.icon-garbage
        li.pr-0
          a.no-icon(href='') Compose
        li.hidden-sm-down
          a.no-icon(role='button', (click)='initSplitContactLayout();') New Contact
        li.hidden-md-up.hidden-xs-down
          a.no-icon(role='button', (click)='addUserContactModalOpen(addUserContent)') New Contact
    .col-sm-4.mailbox-actionbar-col.hidden-xs-down
      .mail-controls.d-flex.align-items-center.justify-content-end
        .mail-result-text.text-muted
          small 1-50 of 2346
        .mail-nav-control
          button.mail-nav-control-prev(role='button')
            i.icon.icon-chevron-left
          button.mail-nav-control-next(role='button')
            i.icon.icon-chevron-right
.mailbox-section
  .mailbox-section-body.py-0
    .row.mail-contact-layout-row([class.is-splitted]='isLayoutSplitted')
      .col-12.mail-contact-layout-col.mail-contact-listing-col
        .mail-contact
          .mail-contact-header.mail-list-row.border-bottom-0.hidden-xs-down
            .mail-list-inner-row.align-items-center
              .col-sm-4.col-lg-3.mail-contact-col-sm
                .mail-contact-title.text-uppercase
                  strong Name
              .col-sm-8.col-lg-9.mail-contact-col-lg
                .mail-contact-title.text-uppercase
                  strong Email
          .mail-contact-body.is-bordered
            .mail-listing
              .mail-list-row.is-unread
                // <div class="mail-list-row is-unread" *ngFor="let contact of userState.contact"> 
                .mail-list-inner-row.align-items-center
                  .col-sm-4.col-lg-3.mail-contact-col-sm
                    .mail-list-col-row
                      .mail-list-col-item.mail-checkbox
                        .fancy-field-group
                          input.d-none.fancy-field-control#mailItemCheckbox1(name='[]', type='checkbox')
                          label.fancy-field-empty(for='mailItemCheckbox1')
                      .mail-list-col-item.mail-status
                        .mail-status-type
                          i.icon.icon-star
                      .mail-list-col-item.mail-from-name
                        span Alfon
                  .col-sm-8.col-lg-9.mail-contact-col-lg
                    .mail-desc
                      p
                        strong nobody@gmail.com
      .col-12.mail-contact-layout-col.mail-contact-entry-col
        .mail-actions-form-holder
          h5.mail-actions-form-title.text-dark
            button.actions-btn.hidden-sm-up(role='button', (click)='destroySplitContactLayout();')
              i.icon.icon-arrow-left
            strong Contact Details
          form.mail-actions-form
            .form-group
              .row.align-items-center
                .col-sm-2
